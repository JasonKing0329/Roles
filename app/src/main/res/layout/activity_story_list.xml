<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/group_actionbar"
        style="@style/GroupActionbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Stories"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/group_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_delete"
                style="@style/IvActionIcon"
                android:src="@drawable/ic_delete_white_24dp" />
            <ImageView
                android:id="@+id/iv_move"
                style="@style/IvActionIcon"
                android:src="@drawable/ic_view_module_white_24dp" />
            <ImageView
                android:id="@+id/iv_add"
                style="@style/IvActionIcon"
                android:src="@drawable/ic_add_white_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_cancel"
                style="@style/TvActionText"
                android:text="@string/cancel" />
            <TextView
                android:id="@+id/tv_ok"
                style="@style/TvActionText"
                android:text="@string/ok"/>
        </LinearLayout>
    </RelativeLayout>
    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/rv_stories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_actionbar"
        android:layout_marginTop="10dp"/>
</RelativeLayout>